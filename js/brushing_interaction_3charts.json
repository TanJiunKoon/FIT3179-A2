{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": null,
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 728,
          "height": 400,
          "data": {
            "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/income_dataset.json"
          },
          "transform": [
            {
              "filter": {
                "param": "time_brush"
              }
            },
            {
              "calculate": "'RM ' + format(datum.income_mean, ',.0f')",
              "as": "formatted_total_income"
            }
          ],
          "layer": [
            {
              "params": [
                {
                  "name": "hover",
                  "select": {
                    "type": "point",
                    "on": "mouseover",
                    "fields": ["state"]
                  }
                }
              ],
              "mark": {
                "type": "area",
                "line": true,
                "color": {
                  "gradient": "linear",
                  "x1": 1,
                  "y1": 1,
                  "x2": 1,
                  "y2": 0,
                  "stops": [
                    { "offset": 0, "color": "#f7f7f7" },
                    { "offset": 1, "field": "state", "type": "nominal" }
                  ]
                }
              },
              "encoding": {
                "x": {
                  "field": "date",
                  "type": "temporal",
                  "axis": { "title": "Date", "labelFontSize": 12 }
                },
                "y": {
                  "field": "income_mean",
                  "type": "quantitative",
                  "aggregate": "sum",
                  "stack": "zero",
                  "axis": { "title": "Total Income", "titleFontSize": 14, "labelFontSize": 12 }
                },
                "color": {
                  "field": "state",
                  "type": "nominal",
                  "scale": {
                    "range": [
                      "#1f77b4",
                      "#ff7f0e",
                      "#8c564b",
                      "#9467bd",
                      "#2ca02c",
                      "#e377c2",
                      "#7f7f7f",
                      "#bcbd22",
                      "#17becf"
                    ]
                  },
                  "legend": null
                },
                "fillOpacity": {
                  "condition": { "param": "hover", "value": 0.5 },
                  "value": 1
                },
                "tooltip": [
                  {
                    "field": "date",
                    "type": "temporal",
                    "timeUnit": "year",
                    "title": "Year"
                  },
                  { "field": "state", "type": "nominal", "title": "State" },
                  {
                    "field": "formatted_total_income",
                    "type": "nominal",
                    "title": "Total Income"
                  }
                ]
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": 5,
                "dy": -5,
                "fontSize": 10
              },
              "transform": [
                {
                  "filter": {
                    "or": [{ "timeUnit": "year", "field": "date", "equal": 2022 }]
                  }
                }
              ],
              "encoding": {
                "x": { "field": "date", "type": "temporal" },
                "y": {
                  "field": "income_mean",
                  "type": "quantitative",
                  "aggregate": "sum",
                  "stack": "zero"
                },
                "text": {
                  "field": "income_mean",
                  "type": "quantitative",
                  "aggregate": "sum",
                  "format": ",.0f"
                },
                "color": {
                  "field": "state",
                  "type": "nominal",
                  "scale": {
                    "range": [
                      "#1f77b4",
                      "#ff7f0e",
                      "#2ca02c",
                      "#9467bd",
                      "#8c564b",
                      "#e377c2",
                      "#7f7f7f",
                      "#bcbd22",
                      "#17becf"
                    ]
                  }
                }
              }
            }
          ]
        },
        {
          "width": 436,
          "height": 400,
          "title": "Average Income for years selected",
          "data": {
            "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/income_dataset.json"
          },
          "transform": [
            {
              "filter": {
                "param": "time_brush"
              }
            },
            {
              "aggregate": [
                { "op": "mean", "field": "income_mean", "as": "avg_income" }
              ],
              "groupby": ["state"]
            },
            {
              "calculate": "'RM ' + format(datum.avg_income, ',.2f')",
              "as": "formatted_avg_income"
            }
          ],
          "layer": [
            {
              "params": [
                {
                  "name": "hover",
                  "select": {
                    "type": "point",
                    "on": "mouseover",
                    "fields": ["state"]
                  }
                }
              ],
              "mark": {
                "type": "circle",
                "opacity": 0.8
              },
              "encoding": {
                "x": { "field": "state", "type": "nominal", "axis": null },
                "y": { "field": "state", "type": "nominal", "axis": null },
                "size": {
                  "field": "avg_income",
                  "type": "quantitative",
                  "scale": { "range": [1000, 10000] },
                  "legend": null
                },
                "color": {
                  "field": "state",
                  "type": "nominal",
                  "scale": {
                    "range": [
                      "#1f77b4",
                      "#ff7f0e",
                      "#2ca02c",
                      "#9467bd",
                      "#8c564b",
                      "#e377c2",
                      "#7f7f7f",
                      "#bcbd22",
                      "#17becf"
                    ]
                  },
                  "legend": null
                },
                "fillOpacity": {
                  "condition": { "param": "hover", "value": 0.5 },
                  "value": 1
                },
                "tooltip": [
                  { "field": "state", "type": "nominal", "title": "State" },
                  {
                    "field": "formatted_avg_income",
                    "type": "nominal",
                    "title": "Average Income"
                  }
                ]
              }
            },
            {
              "transform": [
                {
                  "calculate": "datum.state",
                  "as": "label"
                }
              ],
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "fontSize": 14
              },
              "encoding": {
                "x": { "field": "state", "type": "nominal", "axis": null },
                "y": { "field": "state", "type": "nominal", "axis": null },
                "text": { "field": "label", "type": "nominal" },
                "color": { "value": "black" }
              }
            }
          ],
          "config": {
            "view": { "stroke": null },
            "axis": { "grid": false }
          }
        }
      ]
    },
    {
      "width": 1228,
      "height": 100,
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/income_dataset.json"
      },
      "mark": { "type": "line", "color": "black" },
      "params": [
        {
          "name": "time_brush",
          "select": { "type": "interval", "encodings": ["x"] }
        }
      ],
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": { "title": "Date", "labelFontSize": 12 }
        },
        "y": {
          "field": "income_mean",
          "type": "quantitative",
          "aggregate": "mean",
          "axis": { "title": "Average Income", "titleFontSize": 14, "labelFontSize": 12 }
        }
      }
    }
  ]
}
