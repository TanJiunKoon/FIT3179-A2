{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Parallel coordinates plot showing multiple economic indicators over time.",
  "width": 900,
  "height": 600,
  "padding": 5,

  "data": [
    {
      "name": "data",
      "url": "data.json",
      "format": {
        "type": "json"
      }
    },
    {
      "name": "fields",
      "values": [
        "leading",
        "coincident",
        "lagging",
        "leading_diffusion",
        "coincident_diffusion"
      ]
    }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "range": "width",
      "domain": { "data": "fields", "field": "data" }
    },
    {
      "name": "leading",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": { "data": "data", "field": "leading" }
    },
    {
      "name": "coincident",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": { "data": "data", "field": "coincident" }
    },
    {
      "name": "lagging",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": { "data": "data", "field": "lagging" }
    },
    {
      "name": "leading_diffusion",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": { "data": "data", "field": "leading_diffusion" }
    },
    {
      "name": "coincident_diffusion",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": false,
      "domain": { "data": "data", "field": "coincident_diffusion" }
    }
  ],

  "axes": [
    {
      "orient": "left",
      "scale": "leading",
      "title": "Leading",
      "ticks": false,
      "labels": false
    },
    {
      "orient": "left",
      "scale": "coincident",
      "title": "Coincident",
      "ticks": false,
      "labels": false
    },
    {
      "orient": "left",
      "scale": "lagging",
      "title": "Lagging",
      "ticks": false,
      "labels": false
    },
    {
      "orient": "left",
      "scale": "leading_diffusion",
      "title": "Leading Diffusion",
      "ticks": false,
      "labels": false
    },
    {
      "orient": "left",
      "scale": "coincident_diffusion",
      "title": "Coincident Diffusion",
      "ticks": false,
      "labels": false
    }
  ],

  "marks": [
    {
      "type": "group",
      "from": { "data": "data" },
      "marks": [
        {
          "type": "line",
          "from": { "data": "fields" },
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "data" },
              "y": {
                "scale": { "signal": "field" },
                "field": { "signal": "datum.data" }
              },
              "stroke": { "value": "steelblue" },
              "strokeWidth": { "value": 1 },
              "strokeOpacity": { "value": 0.3 }
            }
          },
          "transform": [
            {
              "type": "fold",
              "fields": ["leading", "coincident", "lagging", "leading_diffusion", "coincident_diffusion"],
              "as": ["field", "value"]
            }
          ]
        }
      ]
    }
  ],

  "legends": [],

  "signals": [],

  "config": {
    "axis": {
      "titleFontSize": 14,
      "labelFontSize": 12
    }
  }
}
