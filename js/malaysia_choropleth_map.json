{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Unemployment Rate in Malaysia (2022)",
  "width": 1200,
  "height": 650,
  "params": [
    {
      "name": "center_to",
      "value": [110, 2],
      "bind": {
        "input": "select",
        "options": [
          [110, 2],
          [100.9925, 5.4112],
          [116.0753, 5.9781]
        ],
        "labels": ["Malaysia Center", "Penang", "Sabah"],
        "name": "Map Center: "
      }
    },
    {
      "name": "dynamic_zoom",
      "expr": "center_to[0] === 100.9925 && center_to[1] === 5.4112 ? 9200 : center_to[0] === 116.0753 && center_to[1] === 5.9781 ? 9200 : 3000"
    },
    {
      "name": "zoom_level",
      "value": 3000,
      "bind": {
        "input": "range",
        "min": 1000,
        "max": 10000,
        "step": 100,
        "name": "Zoom: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level === 3000 ? dynamic_zoom : zoom_level" }
  },
  "config": {
    "background": "transparent",
    "axis": {
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": false
    },
    "view": { "stroke": null }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue",
        "stroke": "lightblue",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_5"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#eaeaea"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#f0f0f0",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/malaysia_states.json",
        "format": { "type": "topojson", "feature": "gadm41_MYS_1" }
      },
      "transform": [
        {
          "calculate": "datum.properties.NAME_1 == 'Penang' ? 'Pulau Pinang' : datum.properties.NAME_1 == 'Kuala Lumpur' ? 'W.P. Kuala Lumpur' : datum.properties.NAME_1 == 'Labuan' ? 'W.P. Labuan' : datum.properties.NAME_1 == 'Putrajaya' ? 'W.P. Putrajaya' : datum.properties.NAME_1",
          "as": "state_name"
        },
        {
          "lookup": "state_name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/TanJiunKoon/FIT3179-A2/main/data/Cleaned_Unemployment_Rate_Data.csv",
              "format": { "type": "csv" },
              "transform": [
                { "filter": "datum.date == '2022-01-01'" }
              ]
            },
            "key": "state",
            "fields": ["u_rate"]
          }
        },
        { "calculate": "datum.u_rate", "as": "Unemployment Rate (%)" }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Unemployment Rate (%)",
          "type": "quantitative",
          "scale": {
            "type": "quantize",
            "scheme": "blues",
            "domain": [1, 8],
            "reverse": false
          }
        },
        "tooltip": [
          { "field": "state_name", "type": "nominal", "title": "State" },
          {
            "field": "Unemployment Rate (%)",
            "type": "quantitative",
            "title": "Unemployment Rate (%)",
            "format": ".1f"
          }
        ],
        "fillOpacity": {
          "condition": { "selection": "hover", "value": 0.5 },
          "value": 1
        }
      },
      "selection": {
        "hover": { "type": "single", "on": "mouseover", "empty": "none" }
      }
    },
    {
      "data": {
        "url": "data/annotations.csv",
        "format": { "type": "csv" }
      },
      "encoding": {
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "latitude": { "field": "Latitude", "type": "quantitative" }
      },
      "layer": [
        {
          "layer": [
            {
              "mark": {
                "type": "point",
                "size": 600,
                "shape": "arrow",
                "color": "#040404",
                "dy": -100,
                "strokeWidth": 2,
                "fill": "#000000"
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -120,
                "dy": 25,
                "fontStyle": "italic",
                "fontWeight": "bold",
                "fontSize": 12,
                "color": "#040404"
              },
              "encoding": { "text": { "field": "text_annotation" } }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -120,
                "dy": 45,
                "fontStyle": "italic",
                "fontWeight": "bold",
                "fontSize": 12,
                "color": "#040404"
              },
              "encoding": { "text": { "field": "text_annotation2" } }
            }
          ]
        }
      ]
    }
  ]
}
